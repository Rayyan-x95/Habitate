rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Tasks (Private)
    match /tasks/{taskId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read, update, delete: if isOwner(resource.data.userId);
    }

    // Habits (Private)
    match /habits/{habitId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read, update, delete: if isOwner(resource.data.userId);
    }

    // Workouts (Private)
    match /workouts/{workoutId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read, update, delete: if isOwner(resource.data.userId);
    }

    // Posts
    match /posts/{postId} {
      allow read: if resource.data.visibility == 'public' || isOwner(resource.data.authorId);
      allow create: if isOwner(request.resource.data.authorId);
      allow update, delete: if isOwner(resource.data.authorId);
    }

    // Habitats (Groups)
    match /habitats/{habitatId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (request.auth.uid in resource.data.admins || request.auth.uid == resource.data.owner);
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.owner;
    }
    
    // Stories
    match /stories/{storyId} {
       allow read: if isAuthenticated();
       allow create: if isOwner(request.resource.data.userId);
       allow delete: if isOwner(resource.data.userId);
    }
  }
}
